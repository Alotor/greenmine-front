<!DOCTYPE html>
<html ng-app="greenmine">
    <head>
        <meta charset="utf-8" />
        <title>{{ pageTitle }}</title>
        {%- if environment == "pro" %}
        <link href="/less/greenmine.css" rel="stylesheet" type="text/css">
        {%- else %}
        <link rel="stylesheet/less" type="text/css" href="/less/greenmine-main.less">
        <script src="/js/lib/less-1.3.3.min.js"></script>
        {%- endif %}
    </head>
    <body class="{{ '{{' }} pageSection {{ '}}' }}">
        <div class="main" id="main">
            <div class="views" ng-view></div>
        </div>

        <!-- Main libraries -->
        {%- if environment == "pro" %}
        <script src="/js/min/main.js"></script>
        <script src="/js/min/greenmine.js"></script>
        {%- else %}
        <!-- main.js -->
        <script src="/js/lib/jquery-1.9.1.js"></script>
        <script src="/js/lib/ui/jquery.ui.core.js"></script>
        <script src="/js/lib/ui/jquery.ui.position.js"></script>
        <script src="/js/lib/ui/jquery.ui.widget.js"></script>
        <script src="/js/lib/ui/jquery.ui.mouse.js"></script>
        <script src="/js/lib/ui/jquery.ui.draggable.js"></script>
        <script src="/js/lib/ui/jquery.ui.droppable.js"></script>
        <script src="/js/lib/ui/jquery.ui.effect.js"></script>
        <script src="/js/lib/ui/jquery.ui.effect-drop.js"></script>
        <script src="/js/lib/ui/jquery.ui.effect-transfer.js"></script>
        <script src="/js/lib/ui/jquery.ui.position.js"></script>
        <script src="/js/lib/ui/jquery.ui.sortable.js"></script>
        <script src="/js/lib/jquery.markitup.js"></script>
        <script src="/js/lib/select2.js"></script>
        <script src="/js/lib/markdown.js"></script>
        <script src="/js/lib/lodash.js"></script>
        <script src="/js/lib/underscore.string.js"></script>
        <script src="/js/lib/angular.js"></script>
        <script src="/js/lib/bootstrap.js"></script>
        <script src="/js/lib/moment.js"></script>
        <script src="/js/lib/kalendae.js"></script>
        <script src="/js/lib/parsley.js"></script>
        <script src="/js/lib/q.js"></script>
        <script src="/js/lib/spin.js"></script>
        <script src="/js/lib/sha1.js"></script>
        <script src="/js/lib/Chart.js"></script>
        <script src="/js/lib/noty/jquery.noty.js"></script>
        <script src="/js/lib/noty/default.js"></script>
        <script src="/js/lib/noty/layout.js"></script>

        <!-- greenmine.js -->
        <script src="/js/app.js"></script>
        <script src="/js/utils.js"></script>
        <script src="/js/services/common.js"></script>
        <script src="/js/services/resource.js"></script>
        <script src="/js/services/storage.js"></script>
        <script src="/js/controllers/auth.js"></script>
        <script src="/js/controllers/project.js"></script>
        <script src="/js/controllers/backlog.js"></script>
        <script src="/js/controllers/dashboard.js"></script>
        <script src="/js/controllers/issues.js"></script>
        <script src="/js/controllers/wiki.js"></script>
        <script src="/js/directives/generic.js"></script>
        <script src="/js/directives/common.js"></script>
        <script src="/js/directives/dashboard.js"></script>
        <script src="/js/directives/issues.js"></script>
        <script src="/js/directives/wiki.js"></script>
        <script src="/js/filters/common.js"></script>
        {%- endif %}

        <!-- config.js -->
        <script src="/js/config.js"></script>
    </body>
</html>
